<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity"
    android:padding="16dp"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgoutcategory"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:src="@drawable/outcategory"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh Sách Thể loại"
            android:textColor="#4682B4"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/txtTenTimCate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="Nhập dữ liệu"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/imgTimKiemCate"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:src="@drawable/searchcate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp">

        <LinearLayout
            android:id="@+id/liaddcategory"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgload"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/addcategory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Thêm thể loại"
                android:textSize="20dp"
                android:textColor="#808080"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_marginLeft="15dp"
        android:id="@+id/listViewCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>