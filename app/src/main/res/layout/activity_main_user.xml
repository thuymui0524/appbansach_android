<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityUser"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">
    <!-- Header -->
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào,"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:padding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/user"
            android:layout_gravity="center"
            android:padding="8dp"/>
    </LinearLayout>
    <!-- User information Button -->
    <FrameLayout
        android:id="@+id/Informationuser"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:background="@drawable/button_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/user1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Thông tin người dùng"
            android:textColor="#4682B4"
            android:textSize="16dp"
            android:textStyle="bold" />
    </FrameLayout>
    <!-- Grid Layout for buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="16dp"
        android:layout_gravity="center">
        <!-- Book Button -->
        <FrameLayout
            android:id="@+id/bookuser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/book1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Sách"
                android:textColor="#4682B4" />
        </FrameLayout>

        <!-- Invoice Button -->
        <FrameLayout
            android:id="@+id/Invoiceuser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/invoice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Hóa đơn"
                android:textColor="#4682B4" />
        </FrameLayout>
    </GridLayout>
    <!-- Top Books Button -->
    <FrameLayout
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:background="@drawable/button_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:src="@drawable/bookhot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Top sách bán chạy"
            android:textColor="#4682B4"
            android:textSize="16dp"
            android:textStyle="bold" />
    </FrameLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="16dp"
        android:layout_gravity="center">
        <!-- Update password Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:id="@+id/btnChangePassword"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingTop="30dp"
                android:src="@drawable/updatepass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Đổi mật khẩu"
                android:textColor="#4682B4" />
        </FrameLayout>

        <!-- Loout Button -->
        <FrameLayout
            android:id="@+id/logOut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingTop="20dp"
                android:src="@drawable/logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Đăng xuất"
                android:textColor="#4682B4" />
        </FrameLayout>
    </GridLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyBookStory xin chào quý khách"
        android:textColor="#FF6347"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:padding="8dp"/>
</LinearLayout>