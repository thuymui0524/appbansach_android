<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderNowActivity"
    android:padding="16dp"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgoutaddodernow"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:src="@drawable/outcategory"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#4682B4"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng:"
                android:textColor="#4682B4"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtKhachHangOrdernow"
                android:layout_width="217dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="Khách hàng"
                android:textColor="#4682B4"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDT:"
                android:layout_marginRight="5dp"
                android:textColor="#4682B4"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSDTOrdernow"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="#4682B4"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:textColor="#4682B4"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDiaChiOrdernow"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="#4682B4"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:layout_marginBottom="10dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mainchao" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/book_namenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sách"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_pricenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_decreasenow"
                    android:layout_width="54dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#B0E0E6"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/book_quantitynow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button_increasenow"
                    android:layout_width="54dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#B0E0E6"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Lập:"
                android:textColor="#4682B4"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNgayLapOrdernow"
                android:layout_width="207dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Ngày lập"
                android:textColor="#4682B4"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"
                android:textColor="#4682B4"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTongtienOrdernow"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="000.000"
                android:textColor="#4682B4"
                android:textSize="20dp" />


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvError"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp"
        android:textColor="#D32424"
        android:textStyle="italic" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/btnThanhToanOrdernow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:paddingTop="15dp"
        android:paddingRight="80dp"
        android:backgroundTint="#B0E0E6"
        android:paddingBottom="15dp"
        android:text="Thanh toán"
        android:textColor="#4682B4"
        android:textStyle="bold" />

</LinearLayout>